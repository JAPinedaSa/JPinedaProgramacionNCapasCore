@model ML.Empresa
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Empresas</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione una Empresa para editarla o + para agregar...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "Empresa", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-dark table-hover table-bordered table-responsive">
        <thead>
            <tr class="table-secondary">
                <td>Editar</td>
                <td style="display :none;">id</td>
                <td>Nombre</td>
                <td>Telefono</td>
                <td>Correo</td>
                <td>Direccion Web</td>
                <td>Logo</td>
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Empresa empresa in Model.Empresas)
            {
                <tr>
                    <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon" href="@Url.Action("Form", "Empresa", new { IdEmpresa = empresa.IdEmpresa })"><i class="bi bi-pencil-square" style="color: ivory"></i>Editar</a></td>
                    <td style="display :none;">@empresa.IdEmpresa  </td>
                    <td>@empresa.Nombre </td>
                    <td>@empresa.Telefono </td>
                    <td>@empresa.Correo </td>
                    <td>@empresa.DireccionWeb </td>
                    <td>@empresa.Logo </td>

                    <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Empresa", new { IdEmpresa = empresa.IdEmpresa})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i>Eliminar</a></td>
                </tr>
            }

        </tbody>
    </table>

</div>


