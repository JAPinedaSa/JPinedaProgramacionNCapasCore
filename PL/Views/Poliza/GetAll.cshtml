@model ML.Poliza
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Empresas</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione una Empresa para editarla o + para agregar...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "Poliza", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-dark table-hover table-bordered table-responsive">
        <thead>
            <tr class="table-secondary">
                <td>Editar</td>
                <td style="display :none;">id</td>
                <td>Nombre</td>
                <td>Numero de Poliza</td>
                <td>Nombre De SubPoliza</td>
                <td>Fecha de Creacion</td>
                <td>Fecha de Modificacion</td>
                <td>Usuario</td>
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Poliza poliza in Model.Polizas)
            {
                <tr>
                    <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon" href="@Url.Action("Form", "Poliza", new { IdPoliza = poliza.IdPoliza })"><i class="bi bi-pencil-square" style="color: ivory"></i>Editar</a></td>
                    <td style="display :none;">@poliza.IdPoliza  </td>
                    <td>@poliza.Nombre </td>
                    <td>@poliza.NumeroPoliza </td>
                    <td>@poliza.SubPoliza.Nombre </td>
                    <td>@poliza.FechaCreacion </td>
                    <td>@poliza.FechaModificacion </td>
                    <td>@poliza.Usuario.IdUsuario </td>
                    

                    <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Poliza", new { IdPoliza = poliza.IdPoliza})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i>Eliminar</a></td>
                </tr>
            }

        </tbody>
    </table>

</div>
