@model ML.Aseguradora
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Aseguradoras</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione una Aseguradora para editarla o + para agregar...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "Aseguradora", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-dark table-hover table-bordered table-responsive">
        <thead>
            <tr class="table-secondary">
                <td>Editar</td>
                <td style="display :none;">id</td>
                <td>Nombre</td>
                <td>Fecha de Creación</td>
                <td>Fecha de Modificación</td>
                <td>Id Usuario</td>
                <td>Usuario</td>
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Aseguradora aseguradora in Model.Aseguradoras)
            {
                <tr>
                    <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon" href="@Url.Action("Form", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora })"><i class="bi bi-pencil-square" style="color: ivory"></i>Editar</a></td>
                    <td style="display :none;">@aseguradora.IdAseguradora  </td>
                    <td>@aseguradora.Nombre </td>
                    <td>@aseguradora.FechaCreacion </td>
                    <td>@aseguradora.FechaModificacion </td>
                    <td>@aseguradora.Usuario.IdUsuario </td>
                    <td>@aseguradora.Usuario.Nombre  </td>

                    <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i>Eliminar</a></td>
                </tr>
            }

        </tbody>
    </table>

</div>
